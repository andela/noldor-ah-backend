{
    "name": "noldor-ah-backend",
    "description": "This manifest file help create a review app for every pull request made on github.",
    "repository": "https://github.com/andela/noldor-ah-backend",
    "scripts": {},
    "env": {
        "CLOUDINARY_URL": {
            "required": true
        },
        "DATABASE_URL": {
            "required": true
        },
        "NPM_CONFIG_PRODUCTION": {
            "required": true
        },
        "PRIVATE_KEY": {
            "required": true
        },
        "SENDGRID_API_KEY": {
            "required": true
        },
        "SUPER_USER_EMAIL": {
            "required": true
        },
        "SUPER_USERNAME": {
            "required": true
        },
        "SUPER_USER_PASSWORD": {
            "required": true
        }
    },
    "formation": {
        "web": {
            "quantity": 1
        }
    },
    "addons": [
        {
          "plan": "heroku-postgresql",
          "options": {
          "version": "9.5"
        }
      }
    ],
    "buildpacks": [
        {
            "url": "heroku/nodejs"
        }
    ],
    "environments": {
    "test": {
      "scripts": {
        "test": "npm run clean-db-test && npm run migrate-test && cross-env NODE_ENV=test nyc --reporter=text mocha --require babel-core/register ./server/src/test/index.js --timeout 20000 --recursive --exit",
      }
    }
  }
}
