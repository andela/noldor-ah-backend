{
  "name": "express-authorshaven",
  "version": "1.0.0",
  "description": "A Social platform for the creative at heart",
  "main": "index.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production npm run build && cross-env NODE_ENV=production node server/bin/production",
    "test-dev": "cross-env NODE_ENV=test npm run clean-db-test && cross-env NODE_ENV=test npm run migrate-test && cross-env NODE_ENV=test nyc --reporter=html --reporter=text mocha  --require babel-core/register ./server/src/test/ --timeout 10000 --recursive --exit",
    "migrate-test": "cross-env NODE_ENV=test sequelize db:migrate",
    "clean-db-test": "cross-env NODE_ENV=test sequelize db:migrate:undo:all",
    "test": "npm run clean-db && npm run migrate && cross-env NODE_ENV=test npm run build && nyc --reporter=html --reporter=text mocha ./server/dist/src/test/ --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean-dist": "rm -rf ./server/dist/",
    "build": "npm run clean-dist && mkdir ./server/dist/ && babel index.js -d ./server/dist/ && mkdir ./server/dist/src && babel ./server/src/ -d ./server/dist/src",
    "dev": "nodemon --exec babel-node --presets env index.js",
    "migrate": "sequelize db:migrate",
    "seed": "sequelize db:seed:all",
    "clean-db": "sequelize db:migrate:undo:all"
  },
  "author": "Andela Simulations Programme",
  "license": "MIT",
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "cors": "^2.8.4",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "jsonwebtoken": "^8.3.0",
    "method-override": "^2.3.10",
    "methods": "^1.1.2",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "pg": "^7.5.0",
    "pg-hstore": "^2.3.2",
    "request": "^2.87.0",
    "sequelize": "^4.41.0",
    "sequelize-cli": "^5.2.0",
    "slug": "^0.9.2",
    "underscore": "^1.9.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-babel": "^1.2.3",
    "babel-cli": "^6.26.0",
    "babel-plugin-add-module-exports": "^1.0.0",
    "babel-plugin-istanbul": "^5.1.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "mocha-istanbul": "^0.3.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0",
    "slug": "^0.9.1",
    "underscore": "^1.9.1"
  }
}
